@using ShareView.DTO
@{
    ViewData["Title"] = "Product Page";
    Layout = "~/Views/Shared/_Layout_Slider.cshtml";
}

<section class="bg-light pt-3 pb-3">
    <div class="container">
        <div class="row">
            <div class="col-lg-2">
                <h2 class="fs-3 fw-bold">Categories</h2>
                <div class="mt-4" role="tab" id="headingOne">
                    @foreach (var item in ViewBag.CategoryList)
                    {
                        <div class="d-flex justify-content-between mt-2 dmsp">
                            <a class="fs-5 text-muted" href="@Url.Action("index", "SanPham", new { category = @item.DMSPId})">@item.TenDM</a>
                            <i class="fa-solid fa-angle-right"></i>
                        </div>
                    }
                    <div class="d-flex justify-content-between mt-2 dmsp">
                        <a class="fs-5 text-muted" href="/SanPham">Xem tất cả</a>
                        <i class="fa-solid fa-angle-right"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-10">
                <form class="d-flex align-items-center justify-content-end" method="get" asp-action="index">
                    <div class="mx-4 w-25">
                        <input type="text"
                               name="searchString"
                               id="searchString"
                               class="form-control py-3 text-center"
                               placeholder="Nhập tên sản phẩm cần tìm"
                               style="border-radius: 10px" />
                    </div>
                    <div class="">
                        <button type="submit" value="submit" class="btn btn-primary py-3">
                            Tìm kiếm
                        </button>
                    </div>
                </form>
                <div class="row row-cols-1 row-cols-md-3 g-4 mt-3 ">
                    @foreach (var item in Model)
                    {
                        <div class="col card-pd ">
                            <div class="card h-100 position-relative">
                                <div class="zoom">
                                    <img src="https://localhost:7123/wwwroot/@item.HinhAnh" class="card-img-top" alt="..." />
                                </div>
                                <div class="card-body">
                                    <a class="card-title name-pd fs-6 fw-bold" asp-controller="Sanpham" asp-action="ProductSingle" asp-route-id="@item.SanPhamId">@item.TenSP</a>
                                </div>
                                <div class=" bt-10 position-absolute w-100">
                                    <div class="card-text mb-3 d-flex justify-content-between">
                                        <span class="ms-3 fs-5 fw-bold">Giá</span>
                                        <p class=" me-3 card-text fs-5">
                                            @item.DonGia.ToString("#,##0 VNĐ")
                                        </p>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <div class="ms-3 fs-5 fw-bold">Đánh giá</div>
                                        <div class="me-3">
                                            @for (int i = 1; i <= 5; i++){
                                                if(i<=item.DanhGia){
                                                   <i class="fa-regular fa-star checked"></i>
                                                }
                                                else{
                                                    <i class="fa-regular fa-star"></i>
                                                }
                                            }
                                        </div>
                                    </div>
                                    <div class="mx-3 mt-2 d-flex justify-content-between">
                                        <a class="p-2 button align-items-center text-black" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.SanPhamId">Thêm vào giỏ hàng</a>
                                        <a class="p-2 button align-items-center text-black" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.SanPhamId">Mua ngay</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="row mt-5">
                    <ul class="d-flex align-items-center justify-content-center">
                        @for (var i = 1; i <= ViewBag.totalPage; i++)
                        {
                            if(i == ViewBag.page){
                                <li id="@i" class="mx-4">
                                    <a class="text-warning" href="@Url.Action("index", "SanPham", new {category=@ViewBag.category,searchString=ViewBag.searchString, page = @i })">@i</a>
                                </li>
                            }
                            else{
                                <li id="@i" class="mx-4">
                                    <a href="@Url.Action("index", "SanPham", new {category=@ViewBag.category,searchString=ViewBag.searchString, page = @i })">@i</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>