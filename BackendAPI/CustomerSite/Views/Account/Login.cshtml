@using ShareView.DTO
@model LoginRequestModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutNoFooter.cshtml";
    var error = TempData["Error"] as string;
}
<section class="h-custom">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://localhost:7123/wwwroot/images_bg/bg_login.jpg"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form method="post" asp-controller="Account" asp-action="Login">
                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fs-4 fw-bold mx-3 mb-0">Đăng nhập</p>
                    </div>
                    @if (error != null)
                    {
                        <p class="text-danger">@error</p>
                    }
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form3Example3">Địa chỉ email</label>
                        <input type="email" id="form3Example3" class="form-control "
                               placeholder="Enter a valid email address" asp-for="UserName" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <label class="form-label" for="form3Example4">Password</label>
                        <input type="password" id="form3Example4" class="form-control "
                               placeholder="Enter password" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button @*type="button"*@ class="btn btn-primary btn-lg"
                                type="submit"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Đăng nhập
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Bạn đã có tài khoản chưa? <a href="/Account/Register"
                                                      class="link-danger">Đăng kí</a>
                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>